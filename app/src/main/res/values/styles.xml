<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_accent</item>
    </style>

    <style name="TextDefaultStyle" parent="TextAppearance.AppCompat">
        <item name="android:padding">@dimen/dp_8</item>
        <item name="android:color">@color/color_black</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextSingleLine" parent="TextDefaultStyle">
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:state_selected">true</item>
    </style>

    <style name="TextBold" parent="TextDefaultStyle">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCapsBold" parent="TextSingleLine">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCapsBoldMedium" parent="TextCapsBold">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="TextCapsBoldLarge" parent="TextCapsBold">
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="TextCapsNormal" parent="TextSingleLine">
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextCapsNormalMedium" parent="TextCapsNormal">
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="IconDefault">
        <item name="android:alpha">1</item>
        <item name="android:tint">@color/color_white</item>
    </style>

    <style name="IconSmall" parent="IconDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:padding">@dimen/dp_8</item>
    </style>

    <style name="ToolBarDefault">
        <item name="android:background">@color/color_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
    </style>

    <style name="ToolBarStyle" parent="ToolBarDefault">
        <item name="android:background">@color/color_primary</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.ActionBar</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/color_white</item>
        <item name="android:popupTheme" tools:targetApi="lollipop">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/dp_4</item>
    </style>

    <style name="SearchBox" parent="TextDefaultStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
